<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_home_my_funds"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="darkblue.com.skyline.UI.Activity.HomeMyFundsActivity">
    <!--添加银行卡-->
    <RelativeLayout
        android:id="@+id/relative_home_add_bank_card_title"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/colorPrimaryDark"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="我的资产"
            android:textColor="@color/text_write_color" />

        <ImageView
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_input_delete" />

    </RelativeLayout>


    <android.support.design.widget.TabLayout
        android:id="@+id/tablayout_home_my_funds"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabIndicatorColor="@color/colorPrimaryDark"
        app:tabSelectedTextColor="@color/colorPrimaryDark"
        app:tabTextColor="@color/colorPrimary"
        android:background="@color/text_write_color"


        >

    </android.support.design.widget.TabLayout>
<TextView
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:textColor="@color/tv_line_color"
    />
    <android.support.v4.view.ViewPager
        android:background="@color/text_write_color"
        android:id="@+id/viewpager_home_my_funds"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        ></android.support.v4.view.ViewPager>


</LinearLayout>
