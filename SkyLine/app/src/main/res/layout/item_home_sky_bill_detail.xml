<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/tv_home_sky_bill_detail_month"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="1月"
        />
    <RelativeLayout
        android:background="@color/text_write_color"
        android:padding="10dp"
        android:layout_below="@+id/tv_home_sky_bill_detail_month"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/relative_home_sky_bill_detail_date"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_home_sky_bill_detail_week"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="周四"
                />

            <TextView
                android:layout_below="@+id/tv_home_sky_bill_detail_week"
                android:id="@+id/tv_home_sky_bill_detail_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="01-16"
                />

        </RelativeLayout>


        <ImageView
            android:id="@+id/iv_home_sky_bill_detail_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/relative_home_sky_bill_detail_date"
            android:src="@mipmap/ic_launcher"
            android:layout_centerVertical="true"
            />


        <RelativeLayout
            android:layout_toRightOf="@+id/iv_home_sky_bill_detail_icon"
            android:id="@+id/relative_home_sky_bill_detail_money"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_home_sky_bill_detail_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="-21000.00"
                />

            <TextView
                android:layout_below="@+id/tv_home_sky_bill_detail_money"
                android:id="@+id/tv_home_sky_bill_detail_store"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="绿森数码官方旗舰店"
                />

        </RelativeLayout>
    </RelativeLayout>



</RelativeLayout>