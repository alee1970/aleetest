<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="6dp"

    >


    <TextView
        android:id="@+id/tv_home_fragment_search"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="4dp"
        android:layout_weight="1"
        android:background="#e79006"
        android:drawablePadding="4dp"
        android:hint="请输入关键字"
        android:drawableLeft="@mipmap/icon_main_home_search"
        android:maxLines="1"
        android:padding="4dp"
        android:textColorHint="@color/text_write_color"
        android:textSize="14sp" />

    <TextView

        android:id="@+id/tv_home_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@mipmap/icon_main_home_more" />


</LinearLayout>