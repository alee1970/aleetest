<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tv_line_color"
    android:orientation="vertical">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/text_write_color"
        app:cardCornerRadius="8dp"

        >

        <RelativeLayout
            android:id="@+id/item_home_payment_order_bank_card_relative"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/item_home_payment_order_bank_card_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/item_home_payment_order_bank_card_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/item_home_payment_order_bank_card_iv"
                android:text="兴业银行"
                android:textColor="@color/text_black_color" />


            <TextView
                android:id="@+id/item_home_payment_order_bank_card_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/item_home_payment_order_bank_card_name"
                android:layout_toRightOf="@+id/item_home_payment_order_bank_card_iv"
                android:text="储蓄卡"
                android:textSize="12sp"
                 />
            <TextView
                android:gravity="bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_black_color"
                android:text="***** **** **** **** 1234"
                android:layout_toRightOf="@+id/item_home_payment_order_bank_card_iv"

                android:layout_below="@+id/item_home_payment_order_bank_card_iv"

                />

        </RelativeLayout>


    </android.support.v7.widget.CardView>

</RelativeLayout>